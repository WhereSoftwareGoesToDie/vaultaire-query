cabal-version:       >= 1.10
name:                vaultaire-query
version:             0.4.2.0
synopsis:            Query library for Vaultaire
license:             BSD3
author:              Anchor Engineering <engineering@anchor.com.au>
maintainer:          Anchor Engineering <engineering@anchor.com.au>
copyright:           Â© 2013-2014 Anchor Systems, Pty Ltd and Others
category:            Other
tested-with:         GHC == 7.8.3
stability:           experimental

build-type:          Custom

source-repository    head
  type:              git
  location:          git@github.com:anchor/vaultaire-query.git

library
  hs-source-dirs:    lib
  default-language:  Haskell2010

  exposed-modules:   Vaultaire.Query

  other-modules:     Vaultaire.Query.Base,
                     Vaultaire.Query.Connection,
                     Vaultaire.Query.Combinators

  build-depends:     base >=4.7 && <4.8,
                     containers >=0.5 && <0.6,
                     mtl,
                     transformers,
                     bifunctors,
                     either,
                     errors,
                     mmorph,
                     lens,
                     pipes,
                     pipes-safe,
                     pipes-parse,
                     postgresql-simple,
                     text,
                     network < 2.6,
                     zeromq4-haskell,
                     vaultaire-common,
                     vaultaire-control,
                     marquise,
                     chevalier-common

  ghc-options:       -O2
                     -threaded
                     -Wall
                     -Wwarn
                     -fwarn-tabs
                     -with-rtsopts=-T

  ghc-prof-options:  -fprof-auto
